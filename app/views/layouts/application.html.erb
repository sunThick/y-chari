<!DOCTYPE html>
<html>
  <head>
    <title>YourChari</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", "data-turbo-track": "reload" %>
    <%= javascript_importmap_tags %>
    <%= favicon_link_tag('yourchari_favicon.ico') %>
  </head>

  <body>
    <div class="container">
      <%= render 'layouts/header'%>
      <div class="content">
        <%= render 'layouts/flash', class: "flash"%> 
        <%= yield %>
      </div>
    </div>
  </body>
</html>
